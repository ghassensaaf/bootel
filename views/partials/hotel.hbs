<div class="card mt-3 shadow-sm hotel" >
    <div class="row no-gutters">
        <div class="col-4">
        <img id="${hotel.hotelId}-pic" data-src="${hotel.photos[0]}" class="card-img lazy" alt="...">
        </div>
        <div class="col-5">
            <div class="card-body">

                <h5 class="card-title">${hotel.name}</h5>
                <p class="h-rating">${rating}</p>
                <p class="h-adress"><i class="fas fa-map-marker-alt"></i> ${hotel.address}</p>
                <hr>
                <p class="card-text text-success">${hotel.marketingText}</p>
            </div>
        </div>
        <div class="col-3">
        <div class="card-side card-body">
            <h5 class="card-price">Ã  partir de ${hotel.minRate} ${hotel.currency}</h5>
            <button class="btn btn-outline-warning" id="${hotel.hotelId}-showB" onclick="showRooms(this)">Show Rooms</button>
        </div>
        </div>
    </div>
    <div id="${hotel.hotelId}-hotelRooms" class="container py-2" style="display: none;" >
        <div class="">
            <div class="row">
                <div class="col card-body">
                    <h5 class=""><i class="fas fa-concierge-bell"></i> Choisissez votre chambre et formule</h5>
                </div>
            </div>
            <div class="row mb-4 room-filters">
                <div class="col-2">
                    <input type="radio" class="btn-check room-filter" name="${hotel.hotelId}room-type" id="${hotel.hotelId}-all"  autocomplete="off" data-set="all" checked>
                    <label class="btn btn-outline-secondary form-control" for="${hotel.hotelId}-all"> <small>All</small> </label><br>
                </div>
                ${roomFilters}
            </div>
            <div  class="rooms" >
                <form action="/checkout" method="post">
                    ${rooms}
                    <input type="submit">
                </form>
            </div>
        </div>
    </div>
</div> 
